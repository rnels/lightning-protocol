{
  "compilerOptions": {
    "outDir": "./dist",
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "ES6",
    "moduleResolution": "node",
    "removeComments": true,
    "allowUnreachableCode": false,
    "strict": true
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": ["./src/**/*"]
}
